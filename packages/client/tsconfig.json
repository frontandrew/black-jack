{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext", "webworker"],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "sourceMap": true,
    "baseUrl": "./src",
    "paths": {
      "api": ["./shared/api/index"],
      "images": ["./assets/img/index"],
      "sounds": ["./assets/sounds/index"],
      "features": ["./features/*"],
      "pages": ["./pages/index"],
      "components": ["./shared/components/index"],
      "themes": ["./shared/themes/index"],
      "utils": ["./shared/utils/index"],
      "validators": ["./shared/validation/index"],
      "constant": ["./shared/constant/index"],
      "transport": ["./shared/transport/index"],
      "services": ["./shared/services/index"],
    }
  },
  "include": ["src", "public/sw.ts", "server"],
  "references": [
    { "path": "./tsconfig.node.json" },
    { "path": "./tsconfig.server.json" }
  ]
}
